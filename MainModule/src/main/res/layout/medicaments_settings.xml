<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fastScrollEnabled="true"
    android:focusable="true"
    android:scrollbarStyle="outsideInset" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbars="horizontal" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="40.0px"
            android:background="#ff000020"
            android:gravity="left"
            android:paddingLeft="10.0dip"
            android:paddingTop="5.0dip"
            android:text="@string/titleUnit"
            android:textSize="14.0sp" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <RelativeLayout
                android:id="@+id/relativeLayout1"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/textUnit"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="40.0px"
                    android:gravity="center_vertical"
                    android:text="Unit"
                    android:textSize="14.0sp" />

                <TextView
                    android:id="@+id/unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textSize="16.0sp"
                    android:visibility="gone" />

                <RadioGroup
                    android:id="@+id/radiogroup_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/rb_tempC"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="@string/set_tempC" />

                    <RadioButton
                        android:id="@+id/rb_tempF"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5.0px"
                        android:checked="false"
                        android:text="@string/set_tempF" />
                </RadioGroup>
            </RelativeLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="fill_parent"
            android:layout_height="8.0px"
            android:background="@drawable/public_slip" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="40.0px"
            android:layout_gravity="left|center"
            android:background="#ff000020"
            android:paddingLeft="10.0dip"
            android:paddingTop="5.0dip"
            android:text="@string/titlewarningTemp"
            android:textSize="14.0sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5.0dip"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/relativeLayout7"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent" >

                <TextView
                    android:id="@+id/TextViewtemp"
                    android:layout_width="130.0px"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="40.0px"
                    android:gravity="left|center"
                    android:text="Temperature "
                    android:textSize="14.0sp" />

                <EditText
                    android:id="@+id/highTemp"
                    android:layout_width="135.0dip"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:numeric="decimal"
                    android:singleLine="true" />
            </RelativeLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="8.0px"
            android:background="@drawable/public_slip" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="40.0px"
            android:layout_gravity="left|center"
            android:background="#ff000020"
            android:paddingLeft="10.0dip"
            android:paddingTop="5.0dip"
            android:text="@string/titlephone"
            android:textSize="14.0sp" />

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="fill_parent"
            android:layout_height="45.0dip" >

            <RelativeLayout
                android:id="@+id/relativeLayout6"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="110.0px"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="40.0px"
                    android:gravity="left|center"
                    android:text="@string/set_phone"
                    android:textSize="14.0sp" />

                <EditText
                    android:id="@+id/phone"
                    android:layout_width="135.0dip"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:numeric="integer" />
            </RelativeLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="8.0px"
            android:background="@drawable/public_slip" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="40.0px"
            android:layout_gravity="left"
            android:background="#ff000020"
            android:paddingLeft="10.0dip"
            android:paddingTop="5.0dip"
            android:text="@string/set_alarm"
            android:textSize="14.0sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5.0dip"
            android:orientation="vertical"
            android:scrollbarStyle="outsideOverlay"
            android:scrollbars="horizontal" >

            <RelativeLayout
                android:id="@+id/relativeLayout2"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent" >

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="30.0dip"
                    android:layout_height="30.0dip"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30.0px"
                    android:layout_marginRight="5.0px"
                    android:src="@android:drawable/ic_lock_silent_mode_off" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/imageView2"
                    android:text="@string/set_alarm_sound" />

                <CheckBox
                    android:id="@+id/alarm_sound"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:checked="false" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout5"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="30.0dip"
                    android:layout_height="30.0dip"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30.0px"
                    android:layout_marginRight="5.0px"
                    android:src="@android:drawable/ic_lock_idle_alarm" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/imageView5"
                    android:text="@string/set_alarm_vibration" />

                <CheckBox
                    android:id="@+id/alarm_vibration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:checked="false" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout4"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent" >

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="30.0dip"
                    android:layout_height="30.0dip"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30.0px"
                    android:layout_marginRight="5.0px"
                    android:src="@android:drawable/sym_action_call" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/imageView4"
                    android:text="@string/set_alarm_call" />

                <CheckBox
                    android:id="@+id/alarm_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:checked="false" />
            </RelativeLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="8.0px"
            android:background="@drawable/public_slip" />

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <Button
                android:id="@+id/save_settings"
                android:layout_width="90.0dip"
                android:layout_height="40.0dip"
                android:text="@string/save_settings" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />

    </LinearLayout>

</ScrollView>